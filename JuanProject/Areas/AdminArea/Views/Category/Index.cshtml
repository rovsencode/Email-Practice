@using JuanProject.ViewModels;
@model List<CategoryVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<a asp-controller="Category" asp-action="create" >Create Category</a>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Table with contextual classes</h4>
            <p class="card-description">
                Add class <code>.table-{color}</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                        
                    
                    <thead>
                        <tr>
                            <th>  
                             Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                                @foreach (var item in Model)
                    {
                        <tr class="table-info">
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a asp-controller="category" asp-action="detail" asp-route-id="@item.Id" class="text-info">Detail</a>
                                <a asp-controller="category" asp-action="edit" asp-route-id="@item.Id"  class="text-warning">Rename</a>
                                <a asp-controller="category" asp-action="delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                            </td>
                        </tr>
                     
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>